{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "jsx": "react-native",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": [
      "react",
      "react-native",
      "node",
      "prop-types",
      "node-forge",
      "jest",
      "@testing-library/react-hooks"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "lib": ["esnext"]
  },
  "extends": "expo/tsconfig.base",
  "include": [
    "src/**/*",
    "**/*.ts",
    "**/*.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "nativewind-env.d.ts",
    "global.d.ts"
  ],
  "exclude": ["node_modules", "**/__mocks__/**", "**/__fixtures__/**"]
}
